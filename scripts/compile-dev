# Grab version from NPM package file
PACKAGE_VERSION=$(cat package.json \
  | grep version \
  | head -1 \
  | awk -F: '{ print $2 }' \
  | sed 's/[",]//g')

echo ""

# Write environment variables
echo "REACT_APP_RELEASE=dev" > .env
echo -e "REACT_APP_VERSION=$PACKAGE_VERSION" >> .env
echo "REACT_APP_STAGE=pre-alpha" >> .env
echo "REACT_APP_BUILD_TIME="`date "+%Y/%m/%d %H:%M"` >> .env

cat .env
npm run build:react-script
rm -rf ./dev
mv ./build ./dev
echo "build folder moved to /dev"